@model List<Application.ViewModels.ProductionViewModel.ProductionViewModel>

@{
    ViewData["Title"] = "Production Compain";
}

<div class="row">
    <div class="col-2 offset-10">
        <a class="btn btn-outline-primary float-end" asp-controller="Production" asp-action="Create">Create Production</a>
    </div>
    @if (Model.Count == 0)
    {
        <div class="col-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <h4 class="text-center">PRODUCTIONS NOT FOUND</h4>

                </div>
                <div class="card-body">
                     
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-8 mx-auto">
            <div class="card">
               
                <div class="card-header bg-primary text-light">
                    <h4 class="text-center">LIST OF PRODUCTIONS</h4>
                </div>
                <div class="card-body">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th scope="col">NAME</th>
                                <th scope="col">ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Application.ViewModels.ProductionViewModel.ProductionViewModel item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        <a class="btn btn-success" asp-area="Production" asp-action="Update"
                                            asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" asp-area="Production" asp-action="Delete"
                                            asp-route-id="@item.Id">DELETE</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>