@model List<Application.ViewModels.GendersViewModel.GenderViewModel>

@{
    ViewData["Title"] = "Genders";
}

<div class="row">
    <a class="btn btn-primary float-end" asp-controller="Gender" asp-action="Create">Create Gender</a>
    @if (Model.Count == 0)
    {
        <h2 class="text-center"> Genders Not Found</h2>
    }
    else
    {
        <div class="col-8">
            <div class="card">
                <div class="card-header">
                    LIST OF GENDERS
                </div>
                <div class="card-body col">
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Application.ViewModels.GendersViewModel.GenderViewModel item in Model)
                            {
                                 <tr>
                                    <th>@item.Name</th>
                                    <th> <a class="btn btn-warning">Update</a> <a class="btn btn-danger">DELETE</a></th>
                                </tr>

                            }
                        </tbody>
                    </table>


                </div>



            </div>

        </div>

    }


</div>
