@model List<Application.ViewModels.SeriesViewModel.SeriesViewModel>


<div class="container-fluid">
    <div class="row">
        <div class="col-2 offset-10">
            <a class="btn btn-outline-primary float-end mb-3" asp-controller="Series" asp-action="Create">Add Serie</a>
        </div>
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">

                        @foreach (Application.ViewModels.SeriesViewModel.SeriesViewModel item in Model)
                        {
                            <div class="col-4 mb-3">
                                <div class="card" style="width: 19rem;">
                                    <img src="@item.ImagenUrl" class="card-img-top img-serie-size">
                                    <div class="card-body">
                                        <h4 class="card-title"><strong>@item.Name</strong></h4>
                                        <h5 class="card-text"> Production: @item.ProductionName</h5>
                                        <h5 class="card-text">Genders:@item.PrimaryGender,@item.SecundaryGender</h5>
                                       <a class="btn btn-success" asp-area="Series" asp-action="Update"
                                            asp-route-id="@item.Id">Update</a>
                                        <a asp-controller="Series" asp-action="Delete" asp-route-id="@item.Id"
                                            class="btn btn-danger">DELETE</a>

                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
